	public void paint (Graphics g, JComponent b){
		//ChangeColorButton temp = (ChangeColorButton) b;
		
		if (b.getBackground() == Color.RED)
			b.setBackground(Color.GREEN);
		else if (b.getBackground() == Color.GREEN)
			b.setBackground(Color.RED);
		//System.out.println("CustomButtonUI:"+  b.isSelected());
		/*if (b.getBackground() != getSelectedColor())
			b.setBackground(getSelectedColor());
			*/
	}
	public Color getSelectedColor (){
		return _selectedColor;
	}
}

