import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import com.apple.eawt.ApplicationAdapter;
import com.apple.eawt.ApplicationEvent;
import com.apple.eawt.Application;
import javax.swing.JFrame;
import javax.swing.event.EventListenerList;

public class MacOSHandler extends Application {
	
    protected EventListenerList _MyListenerList =
		new EventListenerList();

    public MacOSHandler() {
        addApplicationListener(new ApplicationAdapter() {
        	public void handleAbout(ApplicationEvent event) {
                new JFrame().setVisible(true);
             	System.out.println("Handler called! No idea why ;)");
        	}
        	public void handleQuit(ApplicationEvent event) {
             	System.out.println("Quiot ahnadler ;)");
        		FireActionEvent.fireEvent (new ApplicationEvent(Event.), _MyListenerList);
        	}
        });
    }
        
        public void addHandlerListener (ApplicationAdapter listener) {
            _MyListenerList.add(ApplicationAdapter.class, listener);
        }

    		
    }

